<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF">

    <Properties>
        <!-- 将系统属性进行一次本地转换 -->
        <Property name="RPC_LOG_LEVEL">${sys:logging.level.com.alipay.sofa.rpc}</Property>
        <Property name="RPC_LOG_PATH">${sys:logging.path}</Property>
        <Property name="RPC_FILE_ENCODING">${sys:file.encoding}</Property>
    </Properties>

    <appenders>

        <RollingFile name="ERROR-APPENDER" fileName="${RPC_LOG_PATH}/rpc/common-error.log" append="true"
                     filePattern="${RPC_LOG_PATH}/rpc/common-error.log.%d{yyyy-MM-dd}">
            <!-- only print error log -->
            <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout charset="${RPC_FILE_ENCODING}">
                <pattern>%d %-5p %-32t - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <!-- 按天分日志文件:重要的是 filePattern 配置到按照天 -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>

        <RollingFile name="ROOT-APPENDER" fileName="${RPC_LOG_PATH}/rpc/common-default.log" append="true"
                     filePattern="${RPC_LOG_PATH}/rpc/common-default.log.%d{yyyy-MM-dd}">
            <ThresholdFilter level="${RPC_LOG_LEVEL}" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout charset="${RPC_FILE_ENCODING}">
                <pattern>%d %-5p %-32t - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <!-- 按天分日志文件:重要的是 filePattern 配置到按照天 -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>

        <RollingFile name="REGISTRY-APPENDER" fileName="${RPC_LOG_PATH}/rpc/sofa-registry.log" append="true"
                     filePattern="${RPC_LOG_PATH}/rpc/sofa-registry.log.%d{yyyy-MM-dd}">
            <ThresholdFilter level="${RPC_LOG_LEVEL}" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout charset="${RPC_FILE_ENCODING}">
                <pattern>%d %-5p %-32t %c - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <!-- 按天分日志文件:重要的是 filePattern 配置到按照天 -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>

        <RollingFile name="SOFA-ROUTER-APPENDER" fileName="${RPC_LOG_PATH}/rpc/sofa-router.log" append="true"
                     filePattern="${RPC_LOG_PATH}/rpc/sofa-router.log.%d{yyyy-MM-dd}">
            <ThresholdFilter level="${RPC_LOG_LEVEL}" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout charset="${RPC_FILE_ENCODING}">
                <pattern>%d %-5p %-32t %c - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <!-- 按天分日志文件:重要的是 filePattern 配置到按照天 -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>

        <RollingFile name="TR-SERIALIZE-APPENDER" fileName="${RPC_LOG_PATH}/rpc/taobao-remoting-serialization.log"
                     append="true"
                     filePattern="${RPC_LOG_PATH}/rpc/taobao-remoting-serialization.log.%d{yyyy-MM-dd}">
            <ThresholdFilter level="${RPC_LOG_LEVEL}" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout charset="${RPC_FILE_ENCODING}">
                <pattern>%d %-5p %-32t - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <!-- 按天分日志文件:重要的是 filePattern 配置到按照天 -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>

        <RollingFile name="SOFA-APPENDER" fileName="${RPC_LOG_PATH}/rpc/sofa-default.log" append="true"
                     filePattern="${RPC_LOG_PATH}/rpc/sofa-default.log.%d{yyyy-MM-dd}">
            <ThresholdFilter level="${RPC_LOG_LEVEL}" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout charset="${RPC_FILE_ENCODING}">
                <pattern>%d %-5p %-32t %c - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <!-- 按天分日志文件:重要的是 filePattern 配置到按照天 -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>

        <RollingFile name="TAOBAO-APPENDER" fileName="${RPC_LOG_PATH}/rpc/taobao-default.log" append="true"
                     filePattern="${RPC_LOG_PATH}/rpc/taobao-default.log.%d{yyyy-MM-dd}">
            <ThresholdFilter level="${RPC_LOG_LEVEL}" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout charset="${RPC_FILE_ENCODING}">
                <pattern>%d %-5p %-32t %c - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <!-- 按天分日志文件:重要的是 filePattern 配置到按照天 -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>

        <RollingFile name="REMOTING-LOG-FILE" fileName="${RPC_LOG_PATH}/rpc/sofa-remoting.log" append="true"
                     filePattern="${RPC_LOG_PATH}/rpc/sofa-remoting.log.%d{yyyy-MM-dd}">
            <ThresholdFilter level="${RPC_LOG_LEVEL}" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout charset="${RPC_FILE_ENCODING}">
                <pattern>%d %-5p %-32t %c{2} - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <!-- 按天分日志文件:重要的是 filePattern 配置到按照天 -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>

        <RollingFile name="TR-LOG-FILE" fileName="${RPC_LOG_PATH}/rpc/taobao-remoting.log" append="true"
                     filePattern="${RPC_LOG_PATH}/rpc/taobao-remoting.log.%d{yyyy-MM-dd}">
            <ThresholdFilter level="${RPC_LOG_LEVEL}" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout charset="${RPC_FILE_ENCODING}">
                <pattern>%n%d %-5p %c{2} - %n%m%n</pattern>
            </PatternLayout>
            <Policies>
                <!-- 按天分日志文件:重要的是 filePattern 配置到按照天 -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>

        <!-- [应用Appender] routeClient DRM监控日志 -->
        <RollingFile name="ROUTE-CLIENT-DRM-APPENDER" fileName="${RPC_LOG_PATH}/rpc/zone-client-drm.log"
                     append="true"
                     filePattern="${RPC_LOG_PATH}/rpc/zone-client-drm.log.%d{yyyy-MM-dd}">
            <ThresholdFilter level="${RPC_LOG_LEVEL}" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout charset="${RPC_FILE_ENCODING}">
                <pattern>%d - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <!-- 按天分日志文件:重要的是 filePattern 配置到按照天 -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>

        <RollingFile name="TR-CONNECTION-DIGEST-APPENDER" fileName="${RPC_LOG_PATH}/rpc/tr-connection-digest.log"
                     append="true"
                     filePattern="${RPC_LOG_PATH}/rpc/tr-connection-digest.log.%d{yyyy-MM-dd}">
            <ThresholdFilter level="${RPC_LOG_LEVEL}" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout charset="${RPC_FILE_ENCODING}">
                <pattern>%d %-5p %-32t - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <!-- 按天分日志文件:重要的是 filePattern 配置到按照天 -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>

        <RollingFile name="WS-CONNECTION-DIGEST-APPENDER" fileName="${RPC_LOG_PATH}/rpc/ws-connection-digest.log"
                     append="true"
                     filePattern="${RPC_LOG_PATH}/rpc/ws-connection-digest.log.%d{yyyy-MM-dd}">
            <ThresholdFilter level="${RPC_LOG_LEVEL}" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout charset="${RPC_FILE_ENCODING}">
                <pattern>%d %-5p %-32t - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <!-- 按天分日志文件:重要的是 filePattern 配置到按照天 -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>

        <!-- [应用Appender] ZoneClient 相关日志 -->
        <RollingFile name="ZONE-CLIENT-APPENDER" fileName="${RPC_LOG_PATH}/rpc/zone-client.log"
                     append="true"
                     filePattern="${RPC_LOG_PATH}/rpc/zone-client.log.%d{yyyy-MM-dd}">
            <ThresholdFilter level="${RPC_LOG_LEVEL}" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout charset="${RPC_FILE_ENCODING}">
                <pattern>%d - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <!-- 按天分日志文件:重要的是 filePattern 配置到按照天 -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>
    </appenders>

    <loggers>
        <logger name="TR-CONNECTION-POOL-DIGEST" level="${RPC_LOG_LEVEL}" additivity="false">
            <appender-ref ref="TR-CONNECTION-DIGEST-APPENDER"/>
            <appender-ref ref="ERROR-APPENDER"/>
        </logger>

        <logger name="WS-CONNECTION-POOL-DIGEST" level="${RPC_LOG_LEVEL}" additivity="false">
            <appender-ref ref="WS-CONNECTION-DIGEST-APPENDER"/>
            <appender-ref ref="ERROR-APPENDER"/>
        </logger>

        <logger name="RPC-REGISTRY" level="${RPC_LOG_LEVEL}" additivity="false">
            <level value="${logging.level.com.alipay.sofa.rpc}"/>
            <appender-ref ref="REGISTRY-APPENDER"/>
            <appender-ref ref="ERROR-APPENDER"/>
        </logger>


        <logger name="SOFA-ROUTER" level="${RPC_LOG_LEVEL}" additivity="false">
            <appender-ref ref="SOFA-ROUTER-APPENDER"/>
            <appender-ref ref="ERROR-APPENDER"/>
        </logger>

        <logger name="com.alipay.sofa.rpc.remoting.tr.codec" level="${RPC_LOG_LEVEL}" additivity="false">
            <appender-ref ref="TR-SERIALIZE-APPENDER"/>
            <appender-ref ref="ERROR-APPENDER"/>
        </logger>

        <logger name="com.taobao.remoting" level="${RPC_LOG_LEVEL}" additivity="false">
            <appender-ref ref="TR-LOG-FILE"/>
            <appender-ref ref="ERROR-APPENDER"/>
        </logger>

        <logger name="com.alipay.remoting" level="${RPC_LOG_LEVEL}" additivity="false">
            <appender-ref ref="REMOTING-LOG-FILE"/>
            <appender-ref ref="ERROR-APPENDER"/>
        </logger>

        <logger name="com.alipay.sofa" level="${RPC_LOG_LEVEL}" additivity="false">
            <appender-ref ref="SOFA-APPENDER"/>
            <appender-ref ref="ERROR-APPENDER"/>
        </logger>

        <logger name="com.taobao" level="${RPC_LOG_LEVEL}" additivity="false">
            <appender-ref ref="TAOBAO-APPENDER"/>
            <appender-ref ref="ERROR-APPENDER"/>
        </logger>

        <!-- zoneclient drm日志 -->
        <logger name="ROUTE_CLIENT_DRM" level="${RPC_LOG_LEVEL}" additivity="false">
            <appender-ref ref="ROUTE-CLIENT-DRM-APPENDER"/>
            <appender-ref ref="ERROR-APPENDER"/>
        </logger>

        <!-- zoneclient日志 -->
        <logger name="com.alipay.zoneclient" level="${RPC_LOG_LEVEL}" additivity="false">
            <appender-ref ref="ZONE-CLIENT-APPENDER"/>
            <appender-ref ref="ERROR-APPENDER"/>
        </logger>

        <root level="${RPC_LOG_LEVEL}">
            <appender-ref ref="ROOT-APPENDER"/>
            <appender-ref ref="ERROR-APPENDER"/>
        </root>
    </loggers>
</configuration>