<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "http://toolkit.alibaba-inc.com/dtd/log4j/log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="ERROR-APPENDER" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="${loggingRoot}/msgbroker/common-error.log"/>
        <param name="append" value="true"/>
        <param name="encoding" value="${loggingEncoding}"/>
        <param name="threshold" value="error"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %-32t - %m%n"/>
        </layout>
    </appender>

    <appender name="ROOT-APPENDER" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="${loggingRoot}/msgbroker/common-default.log"/>
        <param name="append" value="true"/>
        <param name="encoding" value="${loggingEncoding}"/>
        <param name="threshold" value="info"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %-32t - %m%n"/>
        </layout>
    </appender>

    <appender name="MSG-ELASTIC-ROUTE-APPENDER" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="${loggingRoot}/msgbroker/msg-elastic-route.log"/>
        <param name="append" value="true"/>
        <param name="encoding" value="${loggingEncoding}"/>
        <param name="threshold" value="info"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %-32t - %m%n"/>
        </layout>
    </appender>

    <appender name="LOCAL-EVENT-APPENDER" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="${loggingRoot}/msgbroker/local-event.log"/>
        <param name="append" value="true"/>
        <param name="encoding" value="${loggingEncoding}"/>
        <param name="threshold" value="info"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %-32t - %m%n"/>
        </layout>
    </appender>

    <appender name="MSG-THREADPOOL-APPENDER" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="${loggingRoot}/msgbroker/msg-threadpool.log"/>
        <param name="append" value="true"/>
        <param name="encoding" value="${loggingEncoding}"/>
        <param name="threshold" value="info"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %-32t - %m%n"/>
        </layout>
    </appender>

    <logger name="com.alipay.common.event" additivity="false">
        <level value="info"/>
        <appender-ref ref="ERROR-APPENDER"/>
        <appender-ref ref="ROOT-APPENDER"/>
    </logger>

    <logger name="com.taobao.notify" additivity="false">
        <level value="info"/>
        <appender-ref ref="ERROR-APPENDER"/>
        <appender-ref ref="ROOT-APPENDER"/>
    </logger>

    <logger name="MSG_ELASTIC_ROUTE" additivity="false">
        <level value="info"/>
        <appender-ref ref="MSG-ELASTIC-ROUTE-APPENDER"/>
    </logger>

    <logger name="MSG-THREADPOOL" additivity="false">
        <level value="info"/>
        <appender-ref ref="MSG-THREADPOOL-APPENDER"/>
    </logger>

    <logger name="com.alipay.common.event.ext.localevent" additivity="false">
        <level value="info"/>
        <appender-ref ref="ERROR-APPENDER"/>
        <appender-ref ref="LOCAL-EVENT-APPENDER"/>
    </logger>

    <root>
        <level value="info"/>
        <appender-ref ref="ROOT-APPENDER"/>
        <appender-ref ref="ERROR-APPENDER"/>
    </root>

</log4j:configuration>
